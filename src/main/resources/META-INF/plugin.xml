<idea-plugin>
    <id>com.jaysen.FlutterAssetsGeneratorV3</id>
    <name>FlutterAssetsGeneratorV3</name>
    <version>2.6.0</version>
    <vendor email="jaysen.lin@foxmail.com" url="https://github.com/linjonh/FlutterAssetsGenerator.git">linjonh</vendor>

    <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.json</depends>
    <depends>com.intellij.modules.lang</depends>
    <!--    <depends>com.intellij.modules.java</depends>-->
    <depends>com.intellij.modules.all</depends>
    <depends>com.intellij.modules.platform</depends>
    <depends>Dart</depends>
    <depends>org.jetbrains.kotlin</depends>
    <depends>io.flutter</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <applicationService serviceImplementation="com.crzsc.plugin.setting.PluginSetting" />
        <applicationConfigurable
            displayName="FlutterAssetsGeneratorV3"
            id="com.crzsc.plugin.setting.AppSettingsConfigurable"
            instance="com.crzsc.plugin.setting.AppSettingsConfigurable"
            parentId="tools" />
        <!--        行标记-->
        <codeInsight.lineMarkerProvider
            implementationClass="com.crzsc.plugin.provider.AssetsLineMarkerProvider"
            language="Dart" />
    </extensions>

    <extensions defaultExtensionNs="org.jetbrains.kotlin">
        <supportsKotlinPluginMode supportsK2="true"/>
    </extensions>

    <applicationListeners>
        <listener
            class="com.crzsc.plugin.listener.MyProjectManagerListener"
            topic="com.intellij.openapi.project.ProjectManagerListener" />
    </applicationListeners>

    <actions>
        <!-- Add your actions here -->
        <action
            class="com.crzsc.plugin.actions.GenerateAction"
            description="Generate Assets class V3" id="action.generate"
            text="Generate Flutter Assets V3">
            <add-to-group
                anchor="last"
                group-id="BuildMenu" />
            <keyboard-shortcut
                first-keystroke="alt g"
                keymap="$default" />
        </action>
        <action
            class="com.crzsc.plugin.actions.GenerateDirAction"
            description="Configuring Paths in pubspec.yaml"
            icon="AllIcons.Actions.BuildLoadChanges"
            id="com.crzsc.plugin.actions.GenerateDirAction"
            text="Flutter: Configuring Paths V3">
            <add-to-group
                anchor="after"
                group-id="ProjectViewPopupMenu"
                relative-to-action="WeighingNewGroup" />
        </action>
    </actions>
</idea-plugin>